{
    "name": "stormtracker",
    "description": "A new nexus in the sleeves of a node.js.",
    "version": "0.1.11",
    "author": "Devanand Reddy",
	"homepage": "http://stormstack.org",
    "repository": {
	"type": "git",
	"url": "git://github.com/stormstack/stormtracker.git"
    },
    "dependencies": {
	"stormagent" :"0.2.x",
	"dirty": "0.9.x",
	"request": "2.9.x",
	"json-schema": "0.2.0",
	"node-uuid": "1.4.x",
	"passport" :"0.2.x",
	"passport-http" :"0.2.x",
	"zappajs" : "0.4.x",
	"cli-color" : "0.3.x",
	"dirty" : "0.9.x",
	"dirty-query" : "0.1.x",
	"log4js" : "0.6.x"
    },
    "devDependencies": {
		"coffee-script": ">=1.3",
		"mocha" : "1.18.x"
	},
    "optionalDependencies": {},
    "engines": {
	"node": ">=0.10.x"
    },
    "main": "./lib/stormtracker.js",
    "config":{
	"port" : 8123,
	"logfile": "/var/log/stormtracker.log",
	"datadir":"/var/stormstack",
	"stormsigner" :"stormtracker",
	"signerChain":{
	    "CN":"stormtracker",
	    "selfSigned":true,
	    "days": 1800
	},
	"stormkeeper" :{
	    "url":"localhost",
	    "port":8333
	},
	"storm":{
			"functions": [
				"agent.register"
			],
	    "plugins": [
				"./lib/http/certs",
				"./lib/http/agents"
			]
	},
	"folders":{
	    "tmp":"/tmp",
	    "config":"config"
	}
    },
    "scripts": {
	"prepublish": "mkdir -p lib; coffee -o lib -c src",
	"start": "node --expose-gc lib/stormtracker"
    },
    "contributors": [
	    "Peter K. Lee <peter@intercloud.net>",
	"Sivaprasath Busa"
    ]
}
